<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <title>
        WealthSimpler |
        <%= title %>
    </title>
</head>

<body>

    <div class="d-flex h-100 justify-content-center align-items-center">
        <div class="d-flex p-5 flex-column shadow rounded">
            <form action="/signin" method="POST">
                <h1 class="text-center">Sign In</h1>
                <%if (errors.otp === 'Authorization Failed') {  %>
                    <h2 class="text-danger">Authorization Failed! Please enter correct information.</h2>
                    <% } %>
                        <label for="" class="input-label ">Email</label>
                        <input autocomplete="off" type="email" class="form-control" name="email" id="email" required autofocus <%if (errors.otp==='One time password needed' ) { %> readonly value="
                        <%=email %>"
                            <% } %> >


                                <label for="" class="input-label mt-3">Password</label>
                                <input type="password" class="form-control" name="password" id="password" required <%if (errors.otp==='One time password needed' ) { %> readonly value="
                                <%=password %>"
                                    <% } %> >

                                        <%if (errors.otp === 'One time password needed') {  %>

                                            <label for="" class="input-label mt-3 text-danger">One Time Password</label>
                                            <input type="number" class="form-control" name="otp" id="otp" required autofocus>

                                            <% } %>

                                                <div class="mt-3 d-flex flex-row justify-content-evenly">
                                                    <button type="submit" class="btn btn-primary ">Sign in</button>
                                                    <button class="btn btn-secondary ms-3">Forgot Password</button>
                                                </div>
                                                <div class="mt-3 d-flex flex-row justify-content-center ">
                                                    <div class="form-text">Don't have an account?</div>
                                                    <a href="/signup">
                                                        <div class="form-text ms-3 ">Sign up </div>
                                                    </a>

                                                </div>
            </form>


        </div>
    </div>

    <script src="./js/bootstrap.min.js"></script>
</body>

</html>