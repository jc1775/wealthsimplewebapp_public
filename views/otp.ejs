<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <title>
        WealthSimpler |
        <%= title %>
    </title>
</head>

<body>

    <div class="d-flex h-100 justify-content-center align-items-center">
        <div class="d-flex p-5 flex-column shadow rounded">
            <form action="/signin" method="POST">
                <h1 class="text-center">Sign in</h1>
                <label for="" class="input-label ">Email</label>
                <input type="email" class="form-control" name="email" id="email" required readonly value="<%= email %>">

                <label for="" class="input-label mt-3">Password</label>
                <input type="password" class="form-control" name="password" id="password" required readonly value="<%= password %>">

                <label for="" class="input-label mt-3 text-danger">One Time Password</label>
                <input type="password" class="form-control" name="otp" id="otp" required autofocus>

                <div class="mt-3 d-flex flex-row justify-content-evenly">
                    <button type="submit" class="btn btn-primary ">Sign in</button>
                </div>
            </form>


        </div>
    </div>

    <script src="../js/bootstrap.min.js"></script>
</body>

</html>